    "deploy:quick": "node scripts/smart-deploy.js newsroom-system-2024 --build",
    
    "_comment7": "Workflows completos ANTIGOS",
    "workflow:complete": "npm run fetch -- $1 && npm run process-video-scrolly static/data/$1.json newsroom-system-2024 && npm run deploy",
