    "generate-frames": "node scripts/generate-video-frames.js",
    "generate-frames-advanced": "node scripts/enhanced-video-frames.js",
    "upload-frames-old": "node scripts/upload-video-frames.js",
    "process-video-scrolly": "node scripts/upload-video-frames.js",
    "process-video-advanced": "node scripts/enhanced-video-frames.js",
    "upload-globo": "node scripts/upload-globo-storage.js",
    "process-doc": "npm run fetch $1 && npm run generate-frames --docs $1",
    
    "_comment5": "Helpers de desenvolvimento",
    "test-upload": "node scripts/upload-globo-storage.js --help",
    "list-projects": "node scripts/upload-globo-storage.js --list",
    "new-project": "node scripts/upload-globo-storage.js --new-project",
    
