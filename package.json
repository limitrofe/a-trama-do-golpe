{
  "name": "newsroom-system",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    
    "_comment": "Scripts do Google Docs - AGORA COM VIDEOSCROLLY AUTOM√ÅTICO! üöÄ",
    "fetch": "node scripts/fetch-docs.js",
    "fetch-original": "node scripts/fetch-docs.js",
    
    "_comment2": "COMANDO SUPER SIMPLES - USE ESTE! üöÄ",
    "videoscrolly": "node scripts/sistema-simplificado.js",
    
    "_comment3": "Scripts NOVOS para VideoScrollyTelling",
    "video-to-frames": "node scripts/video-to-frames.js",
    "upload-frames": "node scripts/auto-upload-frames.js",
    "process-videoscrolly": "node scripts/process-videoscrolly.js",
    "workflow": "node scripts/workflow-integrado.js",
    
    "_comment4": "Comandos integrados",
    "story:complete": "node scripts/workflow-integrado.js",
    "story:videos": "node scripts/workflow-integrado.js --videos-only",
    "story:update": "node scripts/workflow-integrado.js --update",
    "story:list": "node scripts/workflow-integrado.js --list",
    
    "_comment4": "Scripts para processamento de v√≠deo",
